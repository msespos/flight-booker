Flight
<%= @flight_id %><br>
<%= pluralize(@number_of_passengers, 'passenger') %><br>
Departure airport:
<%= airport_code(@flight.departure_airport_id) %><br>
Arrival airport:
<%= airport_code(@flight.arrival_airport_id) %><br>
Departure date:
<%= format_date(@flight.departure_date) %><br>
Departure time:
<%= format_time(@flight.departure_time) %><br>
Passengers:<br>
<%= form_with url: '/bookings' do |booking_form| %>
  <% @passengers.each_with_index do |passenger, passenger_id| %>
    <%= booking_form.fields_for passenger, index: passenger_id do |passenger_form| %>
      Passenger #<%= passenger_id + 1 %>
      Name<%= passenger_form.text_field :name %>
      Email<%= passenger_form.text_field :email %><br>
    <% end %>
  <% end %>
  <%= booking_form.submit 'Book it!' %>
<% end %>
